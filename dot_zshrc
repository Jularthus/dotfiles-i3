export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="bigpathgreen"

plugins=(git)

source $ZSH/oh-my-zsh.sh

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
   export EDITOR='vim'
 else
   export EDITOR='lvim'
 fi

#alias 

alias cls="clear"
alias gc="git commit -m"
alias ga="git add -A"
alias gl="git log" 
alias gp="git push"
alias gs="git status"
alias gd="git diff HEAD^ HEAD"
alias cat="bat --paging=never --plain"
alias lv=lvim
alias r="ranger ."
alias :q=exit

export PATH=$HOME/.local/bin:$PATH
export PATH=$HOME/.cargo/bin:$PATH

# * en zsh 
unsetopt nomatch

# git add commit push
gacp() {
  git add -A
  echo -n "Enter commit name: "
  read commitName
  git commit -m "$commitName"
  git push
}

# AFS from home
afs() {
kinit -f jules-arthus.klein@CRI.EPITA.FR
cd ~
sshfs -o reconnect -o volname=afs jules-arthus.klein@ssh.cri.epita.fr:/afs/cri.epita.fr/user/j/ju/jules-arthus.klein/u/ afs
}
